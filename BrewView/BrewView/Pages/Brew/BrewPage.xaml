<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:brew="clr-namespace:BrewView.Pages.Brew;assembly=BrewView"
             mc:Ignorable="d"
             x:Class="BrewView.Pages.Brew.BrewPage"
             x:DataType="{x:Type brew:IBrewPageViewModel}"
             x:Name="ContentPage"
             Title="Alkohol"
             BackgroundColor="White">
    <Grid>
        <brew:BrewDetailsView x:Name="BrewDetailsView"
                              BindingContext="{Binding CurrentBrew}"
                              Opacity="0" />

        <brew:BrewListView x:Name="BrewListView"/>
    </Grid>
</ContentPage>